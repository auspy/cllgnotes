{
  "extends": "tsconfig/react-library.json",
  "include": [
    ".",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "../../apps/web/components/**/*.ts",
    "./custom.d.ts",
    "../lib/hooks/ToastWrapper.tsx",
    "../../apps/web/components/ToastWrapper.tsx",
    "../../apps/web/components/buttons/ButtonBuyNow.tsx"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/src/*": ["src/*"]
    }
  },
  "exclude": ["dist", "build", "node_modules"]
}
