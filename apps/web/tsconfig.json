{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./*"],
      "@public/*": ["./public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "db/**/*.ts",
    ".next/types/**/*.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "../../packages/ui/**/*.{ts,tsx}"
  ],
  "exclude": ["node_modules"]
}
